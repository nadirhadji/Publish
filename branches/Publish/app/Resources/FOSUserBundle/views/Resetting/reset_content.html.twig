{% trans_default_domain 'FOSUserBundle' %}

<a href="{{ path('fos_user_security_login') }}"><img src="{{ asset('templates/dist/img/logo.png') }}" alt="logo" /></a>
<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">RÃ©initialisation mot de passe</h3>
    </div>
    <div class="form-group has-feedback">
        {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset col-sm-4' } }) }}

            {# Champs nouveau mot de passe #}
            <div class="form-group col-sm-12">
                {{ form_label(form.plainPassword.first, "Nouveau mot de passe : ", {'attr' : {'class' : 'form-control '}}) }}
                <div class="error-message">
                    {{ form_errors(form.plainPassword.first) }}
                </div>
                <div class="form-group col-sm-6">
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control '}}) }}
                </div>
            </div>

            {# Champs Confirmation mot de passe #}
            <div class="form-group has-feedback col-sm-12">
                {{ form_label(form.plainPassword.second, "Confirmation nouveau mot de passe : ", {'attr' : {'class' : 'form-control '}}) }}
                <div class="error-message">
                    {{ form_errors(form.plainPassword.second) }}
                </div>
                <div class="form-group col-sm-6">
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div >
                <input type="submit" class="btn btn-info " value="{{ 'resetting.reset.submit'|trans }}" />
            </div>

        {{ form_end(form) }}

    </div>
</div>